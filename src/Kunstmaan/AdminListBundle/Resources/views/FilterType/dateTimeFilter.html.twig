<div class="form-group">
    <select name="{{nameprefix}}comparator{{namesuffix}}" class="form-control">
        <option value="before" {% if data.comparator is defined and data.comparator == "before" %} selected="selected" {% endif %}>{{ 'kuma_admin_list.filter.datebefore' | trans }}</option>
        <option value="after" {% if data.comparator is defined and data.comparator == "after" %} selected="selected" {% endif %}>{{ 'kuma_admin_list.filter.dateafter' | trans }}</option>
    </select>
</div>

<div class="form-group js-datepicker" data-locale="{{ app.request.locale }}">
    <input type="text" class="form-control form_datepicker{{ nameprefix }}{{ namesuffix }}" data-date-format="{% if app.request.locale == 'hu' %}YYYY-MM-DD{% else %}DD/MM/YYYY{% endif %}" name="{{nameprefix}}value{{namesuffix}}[date]" {% if data.value['date'] is defined %}value="{{data.value['date']}}"{% endif %}>
</div>

<div class="form-group js-datepicker" data-locale="{{ app.request.locale }}">
    <input type="text" class="form-control form_timepicker{{ nameprefix }}{{ namesuffix }}" data-date-format="{% if app.request.locale == 'hu' %}YYYY-MM-DD{% else %}DD/MM/YYYY{% endif %}" name="{{nameprefix}}value{{namesuffix}}[time]" {% if data.value['time'] is defined %}value="{{data.value['time']}}"{% endif %}>
</div>
